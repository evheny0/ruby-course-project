<%= form_for(@creative) do |f| %>
  <% if @creative.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@creative.errors.count, "error") %> prohibited this creative from being saved:</h2>

      <ul>
      <% @creative.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t("creative.title") %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t("creative.description") %>
    <%= f.text_area :description, :class => "form-control", :rows => 5 %>
  </div>

  <div class="form-group">
    <%= f.label t("creative.tag") %>
    <input type="text" class="form-control tags" placeholder="<%= t('creative.enter_tags') %>" name="tags" data-role="tagsinput" 
        value="<% @creative.tags.each do |tag| %><%= tag.value %>,<% end %>"/>
  </div>
  <div class="actions">
    <%= f.submit t("creative.submit"), :class => "btn btn-primary btn-block"  %>
  </div>
<% end %>

<%= javascript_include_tag "creatives" %>
