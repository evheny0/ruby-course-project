<div class="col-md-6 col-md-offset-3">
    <div class="well">
        <legend>
            <%= t("devise.forms.register") %>
        </legend>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
        
            <div class="form-group">
                <%= f.label t("devise.forms.email") %>
                <%= f.email_field :email, :autofocus => true, :class => "form-control" %>
            </div>
        
            <div class="form-group">
                <%= f.label t("devise.forms.username")  %>
                <%= f.text_field :username, :class => "form-control" %>
            </div>
        
            <div class="form-group">
                <%= f.label t("devise.forms.password") %>
                <%= f.password_field :password, :class => "form-control" %>
            </div>
        
            <div class="form-group">
                <%= f.label t("devise.forms.password_confirm") %>
                <%= f.password_field :password_confirmation, :class => "form-control" %>
            </div>
        
            <div><%= f.submit "Sign up", :class => "btn btn-primary btn-block" %></div>
        <% end %>
    </div>
</div>

<%= render "devise/shared/links" %>
