<% if user_signed_in? %>

    <h3>
        You have signed in as
        <%= current_user.email %>
    </h3>
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
    
<% else %>
    
    <h1>Welcome</h1>
    <%= link_to "Sign In", new_user_session_path, :method => :get %>
    <%= link_to "Register", new_user_registration_path, :method => :get %>
    
<% end %>
