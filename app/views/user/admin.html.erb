<div class="page-header">
    <h1>Admin panel</h1>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Is admin</th>
            <th>Is confirmed</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td>
                <input type="checkbox" value="admin" <% if user.admin? %>checked<% end %>>
            </td>
            <td>
                <input type="checkbox" value="confirmed" <%# if user.confirmed? %>checked<%# end %>>
            </td>
            <td>
                <button class="btn btn-default btn-sm">Update</button>
            </td>
            <td>
                <button class="btn btn-danger btn-sm">Delete</button>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>