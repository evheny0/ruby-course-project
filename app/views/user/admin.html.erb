<div class="page-header">
    <h1><%= t("user.admin_panel") %></h1>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th><%= t("user.username") %></th>
            <th><%= t("user.is_admin") %></th>
            <th><%= t("user.is_confirmed") %></th>
            <th><%= t("user.update") %></th>
            <th><%= t("user.delete") %></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td>
                <input type="checkbox" value="admin" <% if user.admin? %>checked<% end %>>
            </td>
            <td>
                <input type="checkbox" value="confirmed" <% if user.confirmed? %>checked<% end %>>
            </td>
            <td>
                <button class="btn btn-default btn-sm"><%= t("user.update") %></button>
            </td>
            <td>
                <a href=<%= "/user/" + user.id.to_s + "/delete" %> class="btn btn-danger btn-sm"><%= t("user.delete") %></a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
